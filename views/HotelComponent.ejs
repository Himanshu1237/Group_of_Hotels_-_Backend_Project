<!-- hotel.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= hotel.name %> | Luxury Stay</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2c3e50;
            --accent-color: #e67e22;
            --light-bg: #f9f9f9;
            --text-color: #333;
            --light-text: #777;
            --white: #ffffff;
            --shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }
        
        body {
            background-color: var(--light-bg);
            color: var(--text-color);
            line-height: 1.6;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        header {
            background-color: var(--primary-color);
            color: var(--white);
            padding: 20px 0;
            box-shadow: var(--shadow);
        }
        
        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .logo {
            font-size: 24px;
            font-weight: bold;
        }
        
        .logo span {
            color: var(--accent-color);
        }
        
        nav ul {
            display: flex;
            list-style: none;
        }
        
        nav ul li {
            margin-left: 20px;
        }
        
        nav ul li a {
            color: var(--white);
            text-decoration: none;
            transition: all 0.3s ease;
        }
        
        nav ul li a:hover {
            color: var(--accent-color);
        }
        
        .hotel-showcase {
            margin-top: 40px;
            background-color: var(--white);
            border-radius: 8px;
            overflow: hidden;
            box-shadow: var(--shadow);
        }
        
        .hotel-image {
            height: 450px;
            overflow: hidden;
            position: relative;
        }
        
        .hotel-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }
        
        .hotel-image:hover img {
            transform: scale(1.05);
        }
        
        .hotel-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
            padding: 20px;
            color: var(--white);
        }
        
        .hotel-overlay h1 {
            font-size: 32px;
            margin-bottom: 10px;
        }
        
        .hotel-rating {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }
        
        .hotel-rating i {
            color: #f1c40f;
            margin-right: 3px;
        }
        
        .hotel-location {
            display: flex;
            align-items: center;
        }
        
        .hotel-location i {
            margin-right: 6px;
        }
        
        .hotel-details {
            padding: 30px;
        }
        
        .hotel-description {
            margin-bottom: 30px;
            line-height: 1.8;
        }
        
        .hotel-features {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .feature {
            display: flex;
            align-items: center;
            padding: 10px;
            background-color: var(--light-bg);
            border-radius: 6px;
        }
        
        .feature i {
            font-size: 18px;
            color: var(--accent-color);
            margin-right: 10px;
        }
        
        .cta-section {
            text-align: center;
            margin-top: 40px;
        }
        
        .cta-button {
            display: inline-block;
            background-color: var(--accent-color);
            color: var(--white);
            padding: 12px 30px;
            border-radius: 30px;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }
        
        .cta-button:hover {
            background-color: #d35400;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(230, 126, 34, 0.3);
        }
        
        .price-tag {
            font-size: 24px;
            font-weight: bold;
            color: var(--primary-color);
            margin-bottom: 20px;
        }
        
        .price-tag span {
            font-size: 16px;
            color: var(--light-text);
        }
        
        footer {
            margin-top: 60px;
            background-color: var(--primary-color);
            color: var(--white);
            padding: 40px 0;
            text-align: center;
        }
        
        .related-hotels {
            margin-top: 60px;
        }
        
        .related-hotels h2 {
            margin-bottom: 20px;
            text-align: center;
            position: relative;
            padding-bottom: 15px;
        }
        
        .related-hotels h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 3px;
            background-color: var(--accent-color);
        }
        
        .hotel-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
        }
        
        .hotel-card {
            background-color: var(--white);
            border-radius: 8px;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: transform 0.3s ease;
        }
        
        .hotel-card:hover {
            transform: translateY(-5px);
        }
        
        .hotel-card-image {
            height: 200px;
            overflow: hidden;
        }
        
        .hotel-card-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .hotel-card-content {
            padding: 20px;
        }
        
        .hotel-card-title {
            font-size: 18px;
            margin-bottom: 10px;
        }
        
        .hotel-card-location {
            color: var(--light-text);
            font-size: 14px;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }
        
        .hotel-card-location i {
            margin-right: 5px;
        }
        
        .hotel-card-price {
            font-weight: bold;
            color: var(--accent-color);
        }
        
        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                text-align: center;
            }
            
            nav ul {
                margin-top: 20px;
                justify-content: center;
            }
            
            .hotel-image {
                height: 300px;
            }
            
            .hotel-features {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div class="header-content">
                <div class="logo">RoyalNest</div>
                <nav>
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/hotels">Hotels</a></li>
                        <li><a href="/destinations">Destinations</a></li>
                        <li><a href="/contact">Contact</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <main class="container">
        <div class="hotel-showcase">
            <div class="hotel-image">
                <img src="<%= hotel.image %>" alt="<%= hotel.name %>">
                <div class="hotel-overlay">
                    <h1><%= hotel.name %></h1>
                    <div class="hotel-rating">
                        <% for(let i = 0; i < Math.floor(hotel.rating); i++) { %>
                            <i class="fas fa-star"></i>
                        <% } %>
                        <% if(hotel.rating % 1 !== 0) { %>
                            <i class="fas fa-star-half-alt"></i>
                        <% } %>
                        <span>(<%= hotel.reviews %> reviews)</span>
                    </div>
                    <div class="hotel-location">
                        <i class="fas fa-map-marker-alt"></i>
                        <span><%= hotel.location %></span>
                    </div>
                </div>
            </div>
            
            <div class="hotel-details">
                <div class="hotel-description">
                    <%= hotel.description %>
                </div>
                
                <h3>Hotel Features</h3>
                <div class="hotel-features">
                    <% hotel.features.forEach(feature => { %>
                        <div class="feature">
                            <i class="<%= feature.icon %>"></i>
                            <span><%= feature.name %></span>
                        </div>
                    <% }) %>
                </div>
                
                <div class="cta-section">
                    <div class="price-tag">
                        $<%= hotel.price %> <span>per night</span>
                    </div>
                    <a href="/booking/<%= hotel.id %>" class="cta-button">Book Now</a>
                </div>
            </div>
        </div>
        
        <% if(relatedHotels && relatedHotels.length > 0) { %>
            <div class="related-hotels">
                <h2>You Might Also Like</h2>
                <div class="hotel-grid">
                    <% relatedHotels.forEach(relatedHotel => { %>
                        <div class="hotel-card">
                            <div class="hotel-card-image">
                                <img src="<%= relatedHotel.image %>" alt="<%= relatedHotel.name %>">
                            </div>
                            <div class="hotel-card-content">
                                <h3 class="hotel-card-title"><%= relatedHotel.name %></h3>
                                <div class="hotel-card-location">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span><%= relatedHotel.location %></span>
                                </div>
                                <div class="hotel-card-price">From $<%= relatedHotel.price %> / night</div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        <% } %>
    </main>

    <footer>
        <div class="container">
            <p>&copy; <%= new Date().getFullYear() %> LuxuryStay. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>